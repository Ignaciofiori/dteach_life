<%- include("../partials/header.ejs") %>
<main>
    <div class="container">
        <section class="containerForm">
        <h1>Iniciar sesion</h1>
        
        <form class="formLogin" action="/users/login" method="post" id="formularioLogin">
            <div>
            <label for="email">Correo</label>
            <input class="barras" type="email" name="email" id="campoEmail">
            </div>
            <% if (locals.errors && errors.email) { %>
 <div class="errors"> <p><%=errors.email.msg %></p>
 </div>
<% } %>
<div class="errors email">
    <ul></ul>
</div>
            <div>   
            <label for="password">Contraseña</label>
            <input class="barras" type="password" name="password" id="campoPassword">
            </div>
            <div class="errors password">   
                <ul></ul>
            </div>
            <label>
            <input class="check" type="checkbox" name="recordarUsuario" id="recordarUsuario">Recordar Usuario
        </label>
        
            <button class="botonEnviarLogin" type="submit">Loguearme</button>
            <div class="recuperarContraseña">
            <p class="fontBold">¿No tenes cuenta?</p>
            <a href="/users/register"><p>Registrate</p></a>
    
            <p class="fontBold">¿Olvidaste la constraseña?</p>
            <a href="#"><p>Recuperar Contraseña</p></a>
        </div>
        </form>
    

    
    </section>
    <script src="/js/usersLogin.js"></script>
</div> 
</main>
