<%- include("../partials/head.ejs") %>
<%- include("../partials/header.ejs") %>
<main>
    <section class="containerForm">
        <h1>Registrarte</h1>
        <% if (locals.errors) { %>
            <% errors.forEach(element => { %>
                <p class="errors"><%= element.msg %> </p>
            <% }) %>
        <% } %>
        <form action="/users/register" method="POST" enctype="multipart/form-data">
            <label for="nombre">Nombre:</label>
            <input type="text" name="nombre" id="nombre" value="<%= locals.old && old.nombre ? old.nombre : '' %>">

            <label for="apellido">Apellido:</label>
            <input type="text" name="apellido" id="apellido" value="<%= locals.old && old.apellido ? old.apellido : '' %>">

            <label for="ubicacion">Ubicacion:</label>
            <input type="text" name="ubicacion" id="ubicacion" value="<%= locals.old && old.ubicacion ? old.ubicacion : '' %>">

            <label for="descripcion">Descripcion:</label>
            <textarea name="descripcion" id="descripcion" cols="30" rows="5" value="<%= locals.old && old.descripcion ? old.descripcion : '' %>"></textarea>

            <label for="imagen">Imagen del Usuario</label>
            <input type="file"  name="imagen" alt="Submit" width="48" height="48" value="<%= locals.old && old.imagen ? old.imagen : '' %>">

            <label for="email">Correo</label>
            <input type="email" name="email" id="email" value="<%= locals.old && old.email ? old.email : '' %>">

            <label for="password">Contrase√±a</label>
            <input type="password" name="password" id="password" >

            <button type="submit">Enviar</button>
        </form>
    </section>
</main>
<%- include("../partials/footer.ejs") %>