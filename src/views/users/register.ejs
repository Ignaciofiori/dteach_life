<%- include("../partials/head.ejs") %>
<%- include("../partials/header.ejs") %>
    <main>
        <section>
            <div class="contenedorRegistro">
                    <h1>Registrarte</h1>
                    <% if(locals.errors){
                    errors.forEach(error => { %>
                        <p><%=error.msg %> </p>
                    <%})%>;
                    <% } %> 
                <form class="register-form" action="/users/register" method="POST" enctype="multipart/form-data">
                    
                    <div class="nombreYApellido formDecoracion">
                        <div class="nombre">
                        <label class="etiquetaTitulo" for="name">Nombre:</label>
                        <br>
                        <input type="text" class="input-register" name="nombre" id="name" placeholder="Nombre">
                    </div>
                        <% if (locals.errors && errors.nombre ) { %>
                        <div class="texto-error">
                            <%= errors.nombre.msg %> 
                        </div>
                        <% } %>
                        
                        
                    <div class="apellido">
                        <label class="etiquetaTitulo" for="name">Apellido:</label>
