                        <input type="text" class="input-register" name="apellido" id="apellido" placeholder="Apellido" >
                    </div>  

                    <% if (locals.errors && errors.apellido ) { %>
                        <div class="texto-error">
                            <%= errors.apellido.msg %> 
                        </div>
                    <% } %>


                        <div class="nombre">
                            <label class="etiquetaTitulo" for="name">Ubicacion:</label>
                            <br>
                            <input type="text" class="input-register" name="ubicacion" id="ubicacion" placeholder="Ubicacion">
                            </div>

                       
        
        
                        
                            <label for="img"> Imagen del Usuario</label>
                            <input type="file"  name="imagenUsuario" alt="Submit" width="48" height="48">
                            <br>
                            <% if (locals.errors && errors.imagenUsuario) { %>
                                <div class="texto-error">
                                    <%= errors.imagenUsuario.msg %> 
                                </div>
                            <% } %>
                            </div>
                <div class="mail formDecoracion">
                    <label class="etiquetaTitulo" for="email">Correo</label>
                    <br>
                    <input type="email" class="input-register" name="email" id="email" placeholder="xxxx@tumail.com">
                </div>
                <% if (locals.errors && errors.email ) { %>
                    <div class="texto-error">
                        <%= errors.email.msg %> 
                    </div>
                <% } %>



